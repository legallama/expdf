<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:type="MailAddinType">
  <Id>12345678-1234-1234-1234-123456789012</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Email to PDF Exporter</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="Email to PDF Exporter"/>
  <Description DefaultValue="Export Outlook emails to PDF - single email or entire conversation chain"/>
  <Hosts>
    <Host xsi:type="MailHost">
      <DesktopFormFactor>
        <FunctionFile resid="functionfile"/>
        <ExtensionPoint xsi:type="MessageReadCommandSurface">
          <OfficeTab id="TabDefault">
            <Group id="msgReadGroup">
              <Label resid="groupLabel"/>
              <Control xsi:type="Button" id="msgReadOpenPaneButton">
                <Label resid="paneButtonLabel"/>
                <Supertip>
                  <Title resid="paneButtonLabel"/>
                  <Description resid="paneButtonTooltip"/>
                </Supertip>
                <Action xsi:type="ShowTaskpane">
                  <SourceLocation resid="taskpaneUrl"/>
                </Action>
              </Control>
            </Group>
          </OfficeTab>
        </ExtensionPoint>
      </DesktopFormFactor>
    </Host>
  </Hosts>
  <Resources>
    <bt:Images>
      <bt:Image id="icon16" DefaultValue="https://via.placeholder.com/16"/>
      <bt:Image id="icon32" DefaultValue="https://via.placeholder.com/32"/>
      <bt:Image id="icon80" DefaultValue="https://via.placeholder.com/80"/>
    </bt:Images>
    <bt:Urls>
      <bt:Url id="functionfile" DefaultValue="http://localhost:3000/taskpane.html"/>
      <bt:Url id="taskpaneUrl" DefaultValue="http://localhost:3000/taskpane.html"/>
    </bt:Urls>
    <bt:ShortStrings>
      <bt:String id="groupLabel" DefaultValue="Export"/>
      <bt:String id="paneButtonLabel" DefaultValue="Export to PDF"/>
      <bt:String id="paneButtonTooltip" DefaultValue="Export this email to PDF"/>
    </bt:ShortStrings>
    <bt:LongStrings>
      <bt:String id="taskTitle" DefaultValue="Email to PDF Exporter"/>
    </bt:LongStrings>
  </Resources>
</OfficeApp>
